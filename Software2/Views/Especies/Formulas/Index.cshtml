@model IEnumerable<Software2.Models.Formula>

@{
    ViewBag.Title = "Index";
}

<h2>Fórmulas</h2>


@{
    if (ViewBag.mascota.formulas.Count == 0)
    {
        <h3>La mascota no tiene ninguna Fórmula médica</h3>
    }
}


<div class="col-xs-6">
    <h3 class="text-center">Propietario</h3>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.cedula)
        </dt>

        <dd>
            @ViewBag.mascota.propietarioFK.cedula
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.nombre)
        </dt>
        <dd>
            @ViewBag.mascota.propietarioFK.nombre
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.apellido)
        </dt>
        <dd>
            @ViewBag.mascota.propietarioFK.apellido
        </dd>

    </dl>
</div>

<div class="col-xs-6">
    <h3 class="text-center">Mascota</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.nombre)
        </dt>

        <dd>
            @ViewBag.mascota.nombre
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.raza)
        </dt>
        <dd>

            @ViewBag.mascota.razaFK.nombre
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.color)
        </dt>
        <dd>
            @ViewBag.mascota.color
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.edad)
        </dt>
        <dd>
            @ViewBag.mascota.edad
        </dd>

    </dl>
</div>


<a href="@Url.Action("Create", "Formulas",new { id = ViewBag.mascota.id})" class="option-item text-info">
    <i class="fa fa-4x fa-plus-circle"></i>
</a>

<table class="table">
    <tr>
        <th>
            Practicante
        </th>

        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Practicante.nombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            <a href="@Url.Action("Delete", "Formulas", new { id = item.formulaID } )" class="option-item text-danger">
                <i class="fa fa-2x fa-close"></i>
            </a>
            <a href="@Url.Action("Details", "Formulas", new { id = item.formulaID } )" class="option-item text-success">
                <i class="fa fa-2x fa-close"></i>
            </a>
        </td>
    </tr>
}

</table>
