@model IEnumerable<Software2.Models.GestionVacunacion>

@{
    ViewBag.Title = "Index";
}



<h2>Vacunas</h2>

@{ 
    if (ViewBag.mascota.gestionVacunacion.Count == 0)
    {
       <h3>La mascota no tiene ninguna vacuna</h3>
    }
}
<div class="col-xs-6">
    <h3 class="text-center">Propietario</h3>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.cedula)
        </dt>
       
        <dd>
            @ViewBag.mascota.propietarioFK.cedula
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.nombre)
        </dt>
        <dd>
            @ViewBag.mascota.propietarioFK.nombre
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.propietarioFK.apellido)
        </dt>
        <dd>
            @ViewBag.mascota.propietarioFK.apellido
        </dd>

    </dl>
</div>

<div class="col-xs-6">
    <h3 class="text-center">Mascota</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.nombre)
        </dt>

        <dd>
            @ViewBag.mascota.nombre
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mascota.especie)
        </dt>
        <dd>
           
            @ViewBag.mascota.especieFK.nombre
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.color)
        </dt>
        <dd>
            @ViewBag.mascota.color
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mascota.edad)
        </dt>
        <dd>
            @ViewBag.mascota.edad
        </dd>

    </dl>
</div>

<a href="@Url.Action("Create", "GestionVacunacions",new { id = ViewBag.mascota.id})" class="option-item text-info">
    <i class="fa fa-4x fa-plus-circle"></i>
</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vacunaID)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaVacunacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dosis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lote)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vacunaID)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaVacunacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lote)
            </td>
            <td>
                <a href="@Url.Action("Delete", "GestionVacunacions", new { id = item.vacunaID } )" class="option-item text-danger">
                    <i class="fa fa-2x fa-close"></i>
                </a>
            </td>
        </tr>
    }

</table>
