@model Software2.Models.MedicamentosFormula

@{
    ViewBag.Title = "Create";
}

<h2>Agregar medicamentos</h2>
<hr />
<div>
    <h3>Formula @ViewBag.formula.formulaID</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Formula.Mascota.nombre)
        </dt>

        <dd>
            @ViewBag.formula.Mascota.nombre
        </dd>

        <dt>
            Fecha
        </dt>

        <dd>
            @ViewBag.formula.fecha;

        </dd>

    </dl>
</div>


<div class="row">
    <h3>Medicamentos de la fórmula</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicamento.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.frecuenciaHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dosis)
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.formula.listaMedicamentos)
        {
            <tr>
               
                <td>
                   @item.Medicamento.nombre
                </td>
                <td>
                    @item.frecuenciaHora
                </td>
                <td>
                    @item.dosis
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="hidden" name="formulaID" id="formulaID" value="@ViewBag.formula.formulaID" />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MedicamentoID, "MedicamentoID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MedicamentoID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MedicamentoID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.frecuenciaHora, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.frecuenciaHora, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.frecuenciaHora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dosis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dosis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dosis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
