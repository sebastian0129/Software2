@model IEnumerable<Software2.Models.Raza>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Listado de Razas</h2>
<a class="btn btn-success btn-sm" href='@Url.Action("Create" )'>
    <span class="glyphicon glyphicon-plus"></span>

</a>
Nueva raza
<br />  
<div class="col-xs-12">
    
    <table class="table table-striped table-bordered table-responsive" id="tablaRazas" >
        <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th></th>
        </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>

                    <td style="text-align:center">
                        <button type="button" class="btn btn-info btn-xs" onclick="window.location ='//localhost:49959/Razas/Edit/' + @Html.DisplayFor(modelItem => item.id)">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                        <button type="button" class="btn btn-success btn-xs" onclick="window.location ='//localhost:49959/Razas/Details/' + @Html.DisplayFor(modelItem => item.id)">
                            <span class="glyphicon glyphicon-fullscreen"></span>
                        </button>
                        <button type="button" class="btn btn-danger btn-xs" onclick="window.location ='//localhost:49959/Razas/Delete/' + @Html.DisplayFor(modelItem => item.id)">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>




                    </td>

                </tr>
            }
        </tbody>

    </table>
        </div>
       

